extends layout

block content
  header.header
    h1 Budżet domowników

  nav.left_bar
    ul.menu
      li#main
        a(href='http://localhost:3000/') Strona główna
      li#faktury
        a(href='http://localhost:3000/wydatki') Rachunki
      li#dodaj_rachunek
